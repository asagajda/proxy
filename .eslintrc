{
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "node": true,
    "meteor": true,
  },

  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-extra-strict": 0,
    "strict": 0,
    "curly": [0],
    "semi": [2, "never"]
  },

  "globals": {
    // define your apps globals here
    
    // Packages
    "Picker": true,
    "FlowRouter": true,
    "BlazeLayout": true,
    "GeoJSON": false,
    "EventEmitter": false,
    "Roles": true,
    "BrowserDetect": true,
    "jQuery": true,
    
    // Components
    "Template": true,
    "Session": true,
    "Meteor": true,
    

    // Collections
    "Campaigns": true,

	// Global variables
	"hooks": true,
	"CssSelectorGenerator": true,
	"ElementName": true,
	"ElementProcessor": true,
  }
}